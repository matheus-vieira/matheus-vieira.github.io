# Jekyll Development Environment Variables - Template
# Copie este arquivo para .env e ajuste os valores conforme necessário

# Jekyll Environment
JEKYLL_ENV=development

# GitHub Metadata
GITHUB_REPOSITORY=seu-usuario/seu-repositorio
GITHUB_USERNAME=seu-usuario

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXX-X
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Comments
DISQUS_SHORTNAME=seu-disqus-shortname

# Server Configuration
JEKYLL_HOST=0.0.0.0
JEKYLL_PORT=4000
LIVERELOAD_PORT=35729

# Build Configuration
JEKYLL_INCREMENTAL=true
JEKYLL_LIVERELOAD=true
JEKYLL_DRAFTS=false

# Development Settings
JEKYLL_PROFILE=false
JEKYLL_TRACE=false
NODE_ENV=development
RUBY_ENV=development

# Feature Flags
ENABLE_COMMENTS=true
ENABLE_ANALYTICS=true
ENABLE_SEARCH=false
ENABLE_PWA=false

# Debug and Logging
DEBUG=false
LOG_LEVEL=info
VERBOSE=false

# API Keys (adicione conforme necessário)
# API_KEY=your_api_key_here
# SECRET_TOKEN=your_secret_token_here

# Email Configuration (para formulários)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@example.com
# SMTP_PASSWORD=your_app_password
